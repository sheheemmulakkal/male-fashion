  <body>

        <!--================Login Navbar Area =================-->

<div class="navbar" style="position: fixed;top: 0;left: 0;right: 0;background-color: #191c24;z-index: 999;display: flex;justify-content: center;padding: 25px 10px;">
    <div class="logo row" style="max-width: 100%; height: auto;">
        <a href=""><img style="max-width: 100px;" style="margin-inline: 15px;" src="/user/img/footer-logo.png" alt="logo"></a> 
        <h3 style="margin-inline: 15px;">Admin Panel</h3>
    </div>
</div>

    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
          <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
            <div class="card col-lg-4 mx-auto" style="margin-top: 50px;">
              <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">Login</h3>
                <form action="/admin/login" method="POST">

                    <!-- error message -->
                    <% if( err )  { %>
                        <div class="col-md-12 form-group">
                          <label   
                          style="border: 1px solid rgb(196, 0, 0); padding: 15px 10px; width: 100%; background-color: rgb(133, 14, 14); color: rgb(255, 164, 164);" 
                          for=""><%= err %></label>
                        </div>
                        <% } else { %>
                            <% } %>

                  <div class="form-group">
                    <label>Email *</label>
                    <input name="email" type="text" class="form-control p_input">
                  </div>
                  <div class="form-group">
                    <label>Password *</label>
                    <input  name="password" type="password" class="form-control p_input">
                  </div>
                  <div class="form-group d-flex align-items-center justify-content-between">
                    <div class="form-check">
                      <!-- <label class="form-check-label">
                        <input type="checkbox" class="form-check-input"> Remember me </label> -->
                    </div>
                    <!-- <a href="#" class="forgot-pass">Forgot password</a> -->
                  </div>
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block enter-btn">Login</button>
                  </div>
                  <!-- <div class="d-flex">
                    <button class="btn btn-facebook mr-2 col">
                      <i class="mdi mdi-facebook"></i> Facebook </button>
                    <button class="btn btn-google col">
                      <i class="mdi mdi-google-plus"></i> Google plus </button>
                  </div> -->
                  <!-- <p class="sign-up">Don't have an Account?<a href="#"> Sign Up</a></p> -->
                </form>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
